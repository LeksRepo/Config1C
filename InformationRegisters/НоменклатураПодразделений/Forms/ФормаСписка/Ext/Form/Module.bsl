		РодительНом = Справочники.Номенклатура.ПустаяСсылка();
		
	КонецЕсли;
	
	Список.Параметры.УстановитьЗначениеПараметра("Подразделение", Подразделение);
	Список.Параметры.УстановитьЗначениеПараметра("РодительНоменклатуры", РодительНом);
	Список.Параметры.УстановитьЗначениеПараметра("СтрокаПоиска", Стр);
	
