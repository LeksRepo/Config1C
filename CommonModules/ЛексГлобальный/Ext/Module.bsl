
Процедура ОповещениеСлужебныхЗаписок() Экспорт
	
	МассивСлужебок = ЛексСервер.ПолучитьСписокНеОзнакомленныхСлужебок();
	ЕстьСлужебки = МассивСлужебок.Количество() > 0;
	
	ЭтоДилер = ПользователиКлиентСервер.ЭтоСеансВнешнегоПользователя();
	ЕстьПеределки = Ложь;
	
	Если НЕ ЭтоДилер Тогда
		
		МассивПеределок = ЛексСервер.ПолучитьНомераПередлокИСрочек(ПользователиКлиентСервер.ТекущийПользователь());
		ЕстьПеределки = МассивПеределок.Количество() > 0;
		
	КонецЕсли;
	
	Если ЕстьСлужебки ИЛИ ЕстьПеределки Тогда
		
		ПараметрыФормы = Новый Структура;
		
		Если ЕстьСлужебки Тогда
			
			ПараметрыФормы.Вставить("МассивСлужебок", МассивСлужебок);
			
		КонецЕсли;
		
		Если ЕстьПеределки Тогда
			
			ПараметрыФормы.Вставить("МассивПеределокИСрочек", МассивПеределок);
			
		КонецЕсли;
		
		ОткрытьФорму("ОбщаяФорма.ФормаНеОзнакомленныхСлужебок", ПараметрыФормы);
		
	КонецЕсли;
	
КонецПроцедуры
