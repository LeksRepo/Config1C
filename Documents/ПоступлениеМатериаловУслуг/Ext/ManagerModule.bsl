	ФормСтрока = "Л = ru_RU; ДП = Истина";
	ПарПредмета="рубль, рубля, рублей, м, копейка, копейки, копеек, ж, 0";
	
	Макет = Документы.ПоступлениеМатериаловУслуг.ПолучитьМакет("МакетОС1");
	
	Запрос = Новый Запрос;
	Запрос.Параметры.Вставить("МассивОбъектов", МассивОбъектов);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ПоступлениеМатериаловУслугОсновныеСредства.Ссылка,
	|	ПоступлениеМатериаловУслугОсновныеСредства.Ссылка.Дата КАК Дата,
