	Запрос.УстановитьПараметр("Подразделение", ТекущийОбъект.Подразделение);
	
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ВЫРАЗИТЬ(тзНоменклатура.Номенклатура КАК Справочник.Номенклатура) КАК Номенклатура,
