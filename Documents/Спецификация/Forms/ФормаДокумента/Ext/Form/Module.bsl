Функция ПоказатьМатериалПодЗаказ()
	
	ТабДок = Новый ТабличныйДокумент;
	ТабДок.ИмяПараметровПечати = "ПараметрыПечати_Заказ";
	ТабДок.АвтоМасштаб = Истина;
	ТабДок.ОтображатьСетку = Ложь;
	ТабДок.Защита = Истина;
	ТабДок.ТолькоПросмотр = Истина;
	ТабДок.ОтображатьЗаголовки = Ложь;

	Макет = Документы.Спецификация.ПолучитьМакет("Заказ");
	ОбластьШапка = Макет.ПолучитьОбласть("Шапка");
	ОбластьШапкаНоменклатуры = Макет.ПолучитьОбласть("ШапкаНоменклатуры");
	ОбластьСтрока = Макет.ПолучитьОбласть("Строка");
	
	ОбластьШапка.Параметры.СпецификацияНомер = Объект.Номер;
	ТабДок.Вывести(ОбластьШапка);
	
	ТабДок.Вывести(ОбластьШапкаНоменклатуры);
	
	ТЗ = Новый ТаблицаЗначений;
	ТЗ.Колонки.Добавить("Номенклатура");
	ТЗ.Колонки.Добавить("Количество");
	ТЗ.Колонки.Добавить("Цена");
	ТЗ.Колонки.Добавить("Стоимость");
	
	ПараметрыОтбора = Новый Структура;
	ПараметрыОтбора.Вставить("ПодЗаказ", Истина);
	НайденныеСтроки = Объект.СписокНоменклатуры.НайтиСтроки(ПараметрыОтбора);
	
	Для каждого Строка Из НайденныеСтроки Цикл
		НоваяСтрока = ТЗ.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, Строка);
		НоваяСтрока.Стоимость = Строка.РозничнаяСтоимость;
	КонецЦикла;
	
	ТЗ.Свернуть("Номенклатура, Цена", "Количество, Стоимость");
	Для каждого Строка Из ТЗ Цикл
		ОбластьСтрока.Параметры.Заполнить(Строка);
		ТабДок.Вывести(ОбластьСтрока);
	КонецЦикла;
	
	Возврат ТабДок;
	
КонецФункции

