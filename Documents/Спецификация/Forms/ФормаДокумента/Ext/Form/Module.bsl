&НаСервереБезКонтекста
Функция ПосчитатьКратность(Номенклатура, Количество)
	
	Кратность = Номенклатура.Кратность;
	КоличествоМатериала = Количество;
	
	Если Кратность > 0 Тогда
		
		//МаксимальныйРазмер = Номенклатура.ДлинаДетали;
		КоличествоМатериала = Кратность * Окр(КоличествоМатериала / Кратность + 0.5, 0, РежимОкругления.Окр15как10);
		
		//Если МаксимальныйРазмер - КоличествоМатериала < 0 Тогда
		//	
		//	
		//	
		//КонецЕсли;
		
	КонецЕсли;
	
	СтруктураКратности = Новый Структура;
	СтруктураКратности.Вставить("Кратность", Кратность);
	СтруктураКратности.Вставить("КоличествоМатериала", КоличествоМатериала);
	
	Возврат СтруктураКратности;
	
КонецФункции

&НаСервере
Процедура ДобавитьКантПоМесту(НоваяСтрока, Номенклатура, Площадь, НомерИзделия)
	
