Функция ПолучитьДанныеДетали(ТипДетали)
	
	ЕстьДанные = Ложь;
	Результат = Неопределено;
	
	Для Каждого Эл Из МассивДанныхДетали Цикл
		
		Если Эл.ТипДетали = ТипДетали Тогда
			
			Результат = Эл.ДанныеДетали;
			ЕстьДанные = Истина;
			
			Прервать;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Если НЕ ЕстьДанные Тогда
		
		Результат = ПолучитьДанныеДеталиСервер(ТипДетали);
		
		Стр = Новый Структура();
		Стр.Вставить("ТипДетали", ТипДетали);
		Стр.Вставить("ДанныеДетали", Результат);
		
		МассивДанныхДетали.Добавить(Стр);
		
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

&НаСервереБезКонтекста
Функция ПолучитьДанныеДеталиСервер(ВидДетали)
	
	Стр = Новый Структура;
	
	НомГруппы = Новый СписокЗначений;
	
	Для Каждого Эл Из ВидДетали.НоменклатурныеГруппы Цикл
		
		Стр2 = Новый Структура;
		Стр2.Вставить("ПолеВыбора", Эл.ПолеВыбора);
		Стр2.Вставить("Группа", Эл.Группа);
		
		НомГруппы.Добавить(Стр2);
		
	КонецЦикла;
	
	Стр.Вставить("НомГруппы", НомГруппы);
	
	СтрДоступность = Новый Структура;
	
	Для Каждого Рек Из Метаданные.Справочники.ВидыДеталей.Реквизиты Цикл
		
		Если Лев(Рек.Имя, 15) = "ДоступностьПоля" Тогда
			
			СтрДоступность.Вставить(Рек.Имя,ВидДетали[Рек.Имя]);
			
		КонецЕсли;
		
	КонецЦикла;
	
	Стр.Вставить("ДоступностьПолей", СтрДоступность);
	
	СтрОбязательныеПоля = Новый Структура;
	
	Для Каждого Рек Из Метаданные.Справочники.ВидыДеталей.Реквизиты Цикл
		
		Если Лев(Рек.Имя, 16) = "ОбязательноеПоле" Тогда
			
			СтрОбязательныеПоля.Вставить(Рек.Имя, ВидДетали[Рек.Имя]);
			
		КонецЕсли;
		
	КонецЦикла;
	
	Стр.Вставить("ОбязательныеПоля", СтрОбязательныеПоля);
	
	Стр.Вставить("ВидДетали", ВидДетали);
	Стр.Вставить("Клееная", ВидДетали.Клееная);
	Стр.Вставить("ОбтачиватьПоУмолчанию", ВидДетали.ОбтачиватьПоУмолчанию);
	Стр.Вставить("ИспользоватьСоответствиеНоменклатуры", ВидДетали.ИспользоватьСоответствиеНоменклатуры);
	Стр.Вставить("СпецФасад", ВидДетали.СпецФасад);
	Стр.Вставить("МатериалСтрока", ВидДетали.МатериалСтрока);
	Стр.Вставить("ПрипускСклейка", ВидДетали.ПрипускСклейка);
	Стр.Вставить("ПрипускПостформинг", ВидДетали.ПрипускПостформинг);
	Стр.Вставить("ЭтоФасад", ВидДетали.ЭтоФасад);
	Стр.Вставить("ЭтоСтолешница", ВидДетали.ЭтоСтолешница);
	Стр.Вставить("ЭтоСтекло", ВидДетали.ЭтоСтекло);
	Стр.Вставить("МинимальнаяШирина", ВидДетали.МинимальнаяШирина);
	Стр.Вставить("МинимальнаяВысота", ВидДетали.МинимальнаяВысота);
	
	Возврат Стр;
	
КонецФункции

&НаКлиенте
Функция ПолучитьНомГруппы(ПолеВыбора)
	
	НомГруппы = Новый СписокЗначений;
	
	Для Каждого Эл Из ДанныеДетали.НомГруппы Цикл
		
		Если Эл.Значение.ПолеВыбора = ПолеВыбора Тогда
			НомГруппы.Добавить(Эл.Значение.Группа);
		КонецЕсли
		
	КонецЦикла;
	
	Возврат НомГруппы;
	
КонецФункции

