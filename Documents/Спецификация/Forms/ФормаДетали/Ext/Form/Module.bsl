		Стр.Низ = Низ;
		Стр.Лево = Лево;
		Стр.Право = Право;
		
		Стр = ПолучитьДанныеКромокНаСервере(Стр);
		
		Инд = 0;
		
		Для Каждого К ИЗ Стр Цикл
			
			Кр = К.Значение;
			
			Если ЗначениеЗаполнено(Кр.Кромка) Тогда
				
				Есть = Ложь;
				
				Для Каждого Эл Из МассивКраткихНаименований Цикл
					
					Если Эл.Кромка = Кр.Кромка Тогда
						Есть = Истина;
						Прервать;
					КонецЕсли;
					
				КонецЦикла;
				
				Если НЕ Есть Тогда
					
					СС = Новый Структура();
					СС.Вставить("Кромка", Кр.Кромка);
					СС.Вставить("КраткоеНаименование", Кр.КраткоеНаименование);
					СС.Вставить("ГлубинаДетали", Кр.ГлубинаДетали);
					
					МассивКраткихНаименований.Добавить(СС);
					
				КонецЕсли;
				
			КонецЕсли;
			
			Инд = Инд + 1;
			
		КонецЦикла;
		
	КонецЕсли;
	
	Возврат Стр;
	
