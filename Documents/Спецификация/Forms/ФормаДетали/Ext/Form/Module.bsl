	+ "" + "☺"
	+ "" + "☺"
	+ Спецификация + "☺"
	+ ТекущаяДеталь.Количество + "☺"
	+ "№ детали " + ТекущаяДеталь.НомерСтроки + " Комментарий: " + ТекущаяДеталь.Комментарий + "☺"
	+ "" + "☺"	
