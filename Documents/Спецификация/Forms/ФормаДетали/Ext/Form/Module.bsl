	СтрКромки.Вставить("Право", ТекущиеДанные.ВыборМебельнойКромкиСправа);
	
	Кромки = ПолучитьДанныеКромок(СтрКромки);
	РазмерыПолотна = ПолучитьДанныеМатериала(Номенклатура);
	
	Размеры = Новый Структура;
	
	Размеры.Вставить("ДлинаПолотна", РазмерыПолотна.ДлинаДетали);
	Размеры.Вставить("ШиринаПолотна", РазмерыПолотна.ШиринаДетали);
	
	Если ЗначениеЗаполнено(СтрКромки.Верх) ИЛИ ЗначениеЗаполнено(СтрКромки.Низ) ИЛИ ЗначениеЗаполнено(СтрКромки.Лево) ИЛИ ЗначениеЗаполнено(СтрКромки.Право) Тогда 
		
		Размеры.Вставить("ВычитаемоеДляШирины", Кромки.Лево.ГлубинаДетали + Кромки.Право.ГлубинаДетали);
