		Размеры.Вставить("ВычитаемоеДляШирины", 0);
		Размеры.Вставить("ВычитаемоеДляВысоты", 0);
		
	КонецЕсли;
	
	Если ДанныеДетали.Клееная Тогда
		
		ДлинаПолотна = Размеры.ДлинаПолотна - ДанныеДетали.ПрипускСклейка;
		ШиринаПолотна = Размеры.ШиринаПолотна - ДанныеДетали.ПрипускСклейка;
		
		ДлинаПолотна = ?(ДлинаПолотна>0,ДлинаПолотна,0);
		ШиринаПолотна = ?(ШиринаПолотна>0,ШиринаПолотна,0);
		
		РазмерыДетали.Вставить("ДлинаПолотна", ДлинаПолотна);
		РазмерыДетали.Вставить("ШиринаПолотна", ШиринаПолотна);
		
	Иначе
		
		РазмерыДетали.Вставить("ДлинаПолотна", Размеры.ДлинаПолотна);
		РазмерыДетали.Вставить("ШиринаПолотна", Размеры.ШиринаПолотна);
		
	КонецЕсли;
	
	РазмерыДетали.Вставить("ВычитаемоеДляШирины", Размеры.ВычитаемоеДляШирины);
	РазмерыДетали.Вставить("ВычитаемоеДляВысоты", Размеры.ВычитаемоеДляВысоты);
	
КонецПроцедуры

