			ШапкаОсновныхНастроек.Вставить("УниверсальнаяКромка", ТекущиеДанные.УниверсальнаяКромка);
			
		КонецЕсли;
		
	КонецЕсли;
	
	ОбновитьДоступность();
	//ПроверкаКоличестваИТолщины();
	ОбновитьФлэш();
	
