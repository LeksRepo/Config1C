&НаКлиенте
Функция ПроверитьПостформинг()
	
	ТекущиеДанные = Элементы.Детали.ТекущиеДанные;
	
	Если ДанныеДетали.ЭтоСтолешница Тогда
		
		Если (ТекущиеДанные.РадиусПравоНиз > 0 ИЛИ ТекущиеДанные.РадиусПравоВерх > 0)
			И ЕстьКромка(ТекущиеДанные) И ТекущиеДанные.Постформинг Тогда
			
			СтруктураКромок = ПолучитьДанныеКромок(СтруктураКромок);
			
			Если СтруктураКромок.Верх.ГлубинаДетали > 0
				ИЛИ СтруктураКромок.Низ.ГлубинаДетали > 0 Тогда
				
				ТекущиеДанные.Постформинг = Ложь;
				
			КонецЕсли;
			
		КонецЕсли;
		
		Если ТекущиеДанные.Постформинг Тогда
			
			ТекущиеДанные.ВыборМебельнойКромкиСправа = Неопределено;
			ТекущиеДанные.ПереключательКромкаСправа = "Нет";
			
		КонецЕсли;
		
	КонецЕсли;
	
КонецФункции

&НаКлиенте
Функция ПроверитьРадиусы(
	РадиусЛевоВерх,
	РадиусПравоВерх,
	РадиусПравоНиз, РадиусЛевоНиз,
	Идентификатор,
	КантСлева,
	КантСправа,
	КантСверху,
	КантСнизу,
	Срез,
	Ошибки,
	ПолеОшибки,
	НомерДеталиСтрока)
	
	СтруктураОшибок = Новый Структура;
	СтруктураОшибок.Вставить("Результат", Истина);
	
	Если РадиусЛевоВерх > 0 И КантСлева <> КантСверху Тогда 
		
		Элементы.Детали.ТекущаяСтрока = Идентификатор;
		Текст = НомерДеталиСтрока + "Кромка слева и сверху не совпадют.";
		ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
		СтруктураОшибок.Вставить("Результат", Ложь);
		
	КонецЕсли;
	
	Если РадиусПравоВерх > 0 И КантСверху <> КантСправа Тогда 
		
		Элементы.Детали.ТекущаяСтрока = Идентификатор;
		Текст = НомерДеталиСтрока + "Кромка справа и сверху не совпадют.";
		ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
		СтруктураОшибок.Вставить("Результат", Ложь);
		
	КонецЕсли;
	
	Если НЕ Элементы.Детали.ТекущиеДанные.Срез 
		И РадиусПравоНиз > 0 
		И КантСправа <> КантСнизу Тогда
		
		Элементы.Детали.ТекущаяСтрока = Идентификатор;
		Текст = НомерДеталиСтрока + "Кромка справа и снизу не совпадют.";
		ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
		СтруктураОшибок.Вставить("Результат", Ложь);
		
	КонецЕсли;
	
	Если РадиусЛевоНиз > 0 И КантСнизу <> КантСлева Тогда
		
		Элементы.Детали.ТекущаяСтрока = Идентификатор;
		Текст = НомерДеталиСтрока + "Кромка слева и снизу не совпадют.";
		ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
		СтруктураОшибок.Вставить("Результат", Ложь);
		
	КонецЕсли;
	
	СтруктураОшибок.Вставить("Ошибки", Ошибки);
	
	Возврат СтруктураОшибок;
	
КонецФункции

&НаСервере
Функция ПроверитьБазовуюНоменклатуру()
	
	МассивНеБазовых = Новый Массив;
	
	МассивПроверяемыхПолей = Новый Массив;
	
	МассивПроверяемыхПолей.Добавить("Номенклатура");
	МассивПроверяемыхПолей.Добавить("НоменклатураДляСклеивания");
	
	МассивПроверяемыхПолей.Добавить("ВыборМебельнойКромкиСверху");
	МассивПроверяемыхПолей.Добавить("ВыборМебельнойКромкиСлева");
	МассивПроверяемыхПолей.Добавить("ВыборМебельнойКромкиСнизу");
	МассивПроверяемыхПолей.Добавить("ВыборМебельнойКромкиСправа");
	
	МассивПроверяемыхПолей.Добавить("Кант");
	МассивПроверяемыхПолей.Добавить("Кромка045мм");
	МассивПроверяемыхПолей.Добавить("Кромка2мм");
	МассивПроверяемыхПолей.Добавить("УниверсальнаяКромка");
	
	Для каждого Строка ИЗ Детали Цикл
		
		Для Каждого Поле ИЗ МассивПроверяемыхПолей Цикл
			
			Если НЕ Строка[Поле].Базовый Тогда
				
				Если ЗначениеЗаполнено(Строка[Поле].БазоваяНоменклатура) Тогда

					Строка[Поле] = Строка[Поле].БазоваяНоменклатура;
					
				ИначеЕсли НЕ (Строка[Поле] = Справочники.Номенклатура.ПустаяСсылка()) Тогда
					
					МассивНеБазовых.Добавить(Строка[Поле]);
					
				КонецЕсли;
				
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЦикла;
	
	Возврат МассивНеБазовых;
	
КонецФункции

&НаКлиенте
Функция ПроверитьПередСохранением()
	
	Отказ = Ложь;
	Ошибки = Неопределено;
	
	НомерСтроки = 0;
	
	МассивНеБазовых = ПроверитьБазовуюНоменклатуру();
	
	Если МассивНеБазовых.Количество() > 0 Тогда 
		
		Для Каждого Стр Из МассивНеБазовых Цикл
			
			Сообщить("Не найдена базовая номенклатура для: "+Стр);
		
		КонецЦикла;
		
		Возврат Ложь;
			
	КонецЕсли;
	
	Для каждого Строка ИЗ Детали Цикл
		
		ИндексЭлемента = НомерСтроки;
		НомерСтроки = НомерСтроки + 1;
		
		ПолеОшибки = "Детали[" + ИндексЭлемента + "].НомерСтроки";
		
		НомерДеталиСтрока = "" + НомерСтроки + " деталь: ";
		
		ДанныеДеталиСтроки = ПолучитьДанныеДетали(Строка.ВидДетали);
		Идентификатор = Строка.ПолучитьИдентификатор();
		
		Обяз = ДанныеДеталиСтроки.ОбязательныеПоля;
		
		РадиусЛевоВерх = Строка.РадиусЛевоВерх;
		РадиусПравоВерх = Строка.РадиусПравоВерх;
		РадиусПравоНиз = Строка.РадиусПравоНиз;
		РадиусЛевоНиз = Строка.РадиусЛевоНиз;
		
		КантСлева = Строка.ВыборМебельнойКромкиСлева;
		КантСправа = Строка.ВыборМебельнойКромкиСправа;
		КантСверху = Строка.ВыборМебельнойКромкиСверху;
		КантСнизу = Строка.ВыборМебельнойКромкиСнизу;
		
		Срез = Строка.Срез;
		
		СтруктураКривогоПилаИПериметра = ЛексКлиентСервер.ПосчитатьПериметрИКривойПил(Строка.ВысотаДетали, Строка.ШиринаДетали, РадиусЛевоВерх + РадиусПравоВерх + РадиусПравоНиз + РадиусЛевоНиз);
		Строка.Периметр = СтруктураКривогоПилаИПериметра.Периметр;
		Строка.ДлинаКривогоПила = ?(ЗначениеЗаполнено(Строка.СтрокаДляФлэш), Строка.ДлинаКривогоПила, СтруктураКривогоПилаИПериметра.ДлинаКривогоПила);
		
		Если Строка.Количество = 0 Тогда
			
			Текст = НомерДеталиСтрока + "Укажите количество деталей";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если НЕ ЗначениеЗаполнено(Строка.ВидДетали) Тогда
			
			Текст = НомерДеталиСтрока + "Не выбран материал.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Строка.ВысотаДетали < ДанныеДеталиСтроки.МинимальнаяВысота Тогда
			
			Текст = НомерДеталиСтрока + "Минимальная высота детали: " + ДанныеДеталиСтроки.МинимальнаяВысота + " мм.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Строка.ШиринаДетали < ДанныеДеталиСтроки.МинимальнаяШирина Тогда
			
			Текст = НомерДеталиСтрока + "Минимальная ширина детали: " + ДанныеДеталиСтроки.МинимальнаяШирина + " мм.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если НЕ ЗначениеЗаполнено(Строка.Номенклатура) Тогда
			
			Текст = НомерДеталиСтрока + "Не заполнена текстура.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Обяз.ОбязательноеПолеДопНом И НЕ ЗначениеЗаполнено(Строка.НоменклатураДляСклеивания) Тогда
			
			Текст = НомерДеталиСтрока + "Не заполнена доп. номенклатура.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		//Окантовка
		
		Если Обяз.ОбязательноеПолеУниверсальнаяКромка И НЕ ЗначениеЗаполнено(Строка.УниверсальнаяКромка) Тогда
			
			Текст = НомерДеталиСтрока + "Не выбрана окантовка.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Обяз.ОбязательноеПолеКант И НЕ ЗначениеЗаполнено(Строка.Кант) Тогда
			
			Текст = НомерДеталиСтрока + "Не выбран кант.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Обяз.ОбязательноеПолеКромка45 И НЕ ЗначениеЗаполнено(Строка.Кромка045мм) Тогда
			
			Текст = НомерДеталиСтрока + "Не выбрана кромка 0.45 мм.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Обяз.ОбязательноеПолеКромка2 И НЕ ЗначениеЗаполнено(Строка.Кромка2мм) Тогда
			
			Текст = НомерДеталиСтрока + "Не выбрана кромка 2 мм.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		//Кромка по сторонам
		
		Если Обяз.ОбязательноеПолеКромкаВерх И НЕ ЗначениеЗаполнено(Строка.ВыборМебельнойКромкиСверху) Тогда
			
			Текст = НомерДеталиСтрока + "Не выбрана кромка верх.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Обяз.ОбязательноеПолеКромкаНиз И НЕ ЗначениеЗаполнено(Строка.ВыборМебельнойКромкиСнизу) Тогда
			
			Текст = НомерДеталиСтрока + "Не выбрана кромка низ.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Обяз.ОбязательноеПолеКромкаЛево И НЕ ЗначениеЗаполнено(Строка.ВыборМебельнойКромкиСлева) Тогда
			
			Текст = НомерДеталиСтрока + "Не выбрана кромка лево.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Обяз.ОбязательноеПолеКромкаПраво И НЕ ЗначениеЗаполнено(Строка.ВыборМебельнойКромкиСправа) Тогда
			
			Текст = НомерДеталиСтрока + "Не выбрана кромка право.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Обяз.ОбязательноеПолеПетли И НЕ ЗначениеЗаполнено(Строка.Петли) И НЕ Строка.БезПетель Тогда
			
			Текст = НомерДеталиСтрока + "Не выбраны петли.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если Строка.КоличествоПетель > 0 И НЕ ЗначениеЗаполнено(Строка.Петли) И НЕ Строка.БезПетель Тогда
			
			Текст = НомерДеталиСтрока + "Не выбраны петли.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если ЗначениеЗаполнено(Строка.Петли) И Строка.КоличествоПетель = 0 Тогда
			
			Текст = НомерДеталиСтрока + "Не выбрано количество петель.";
			ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
			
		КонецЕсли;
		
		Если ДанныеДеталиСтроки.ЭтоФасад Тогда
			
			Если ДанныеДеталиСтроки.СпецФасад Тогда
				
				КоличествоТорцевыхРучек = 0;
				СтруктураКромок = Новый Структура;
				СтруктураКромок.Вставить("Сверху", Строка.ВыборМебельнойКромкиСверху);
				СтруктураКромок.Вставить("Снизу", Строка.ВыборМебельнойКромкиСнизу);
				СтруктураКромок.Вставить("Слева", Строка.ВыборМебельнойКромкиСлева);
				СтруктураКромок.Вставить("Справа", Строка.ВыборМебельнойКромкиСправа);
				СтруктураКромок.Вставить("ШиринаДетали", Строка.ШиринаДетали);
				СтруктураКромок.Вставить("ВысотаДетали", Строка.ВысотаДетали);
				РезультатПоКромке = ПроверитьКромку(СтруктураКромок, КоличествоТорцевыхРучек);
				
				Если РезультатПоКромке.КоличествоТорцевыхРучек > 1 ИЛИ РезультатПоКромке.НесовпадениеКромки Тогда
					
					Текст = ?(РезультатПоКромке.НесовпадениеКромки, 
					НомерДеталиСтрока + "Обрамление фасада различается.",
					НомерДеталиСтрока + "Нельзя использовать больше одной торцевой ручки.");
					ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
					
				КонецЕсли;
				
				Если РезультатПоКромке.ПревышениеВысоты
					ИЛИ РезультатПоКромке.ПревышениеШирины Тогда
					
					Текст = НомерДеталиСтрока + "Использована слишком маленькая торцевая ручка.";
					ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
					
				КонецЕсли;
				
			КонецЕсли;
			
			Если ЗначениеЗаполнено(Строка.РасположениеПазовИРучкиНаФасадах) Тогда
				
				СтруктураПазовИРучек = ПолучитьЗначениеСтруктурыПазовИРучек(Строка.РасположениеПазовИРучкиНаФасадах);
				ПазыОтсутствуют = СтруктураПазовИРучек.ПазыОтсутствуют;
				БезРучки = СтруктураПазовИРучек.БезРучки;
				
			Иначе
				
				ПазыОтсутствуют = Ложь;
				БезРучки = Ложь;
				
			КонецЕсли;
			
			Если НЕ ЗначениеЗаполнено(Строка.НоменклатураДляСклеивания)
				И ЗначениеЗаполнено(Строка.РасположениеПазовИРучкиНаФасадах)
				И НЕ БезРучки Тогда
				
				Текст = НомерДеталиСтрока + "Не выбрана ручка.";
				ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
				
			КонецЕсли;
			
			Если ЗначениеЗаполнено(Строка.НоменклатураДляСклеивания)
				И НЕ ЗначениеЗаполнено(Строка.РасположениеПазовИРучкиНаФасадах)
				И НЕ БезРучки Тогда
				
				Текст = НомерДеталиСтрока + "Не выбрано расположение ручки.";
				ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
				
			КонецЕсли;
			
			Если ЗначениеЗаполнено(Строка.Петли) и НЕ ЗначениеЗаполнено(Строка.РасположениеПазовИРучкиНаФасадах) Тогда
				
				Текст = НомерДеталиСтрока + "Не выбрано расположение петель.";
				ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
				
			КонецЕсли;
			
			Если Обяз.ОбязательноеПолеРадиусФасада И Строка.РадиусФасада = "" Тогда
				
				Текст = НомерДеталиСтрока + "Не выбран радиус фасада.";
				ОбщегоНазначенияКлиентСервер.ДобавитьОшибкуПользователю(Ошибки, ПолеОшибки, Текст);
				
			КонецЕсли;
			
		КонецЕсли;
		
		Если НЕ ДанныеДеталиСтроки.ЭтоСтолешница Тогда
			
