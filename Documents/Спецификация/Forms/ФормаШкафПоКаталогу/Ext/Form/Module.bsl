					Элемент.СтрокаПрипусков = Элемент.СтрокаПрипусков + "ПрипускСправа";
				КонецЕсли;
				
			КонецЕсли;			
		КонецЦикла;
		
		# КонецОбласти
		
		Структура = Новый Структура;
		Структура.Вставить("Детали", Детали.Выгрузить());
