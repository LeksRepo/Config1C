		ТабДок.Вывести(ОбластьЗаголовок);
		
		Шапка.Параметры.Заполнить(Выборка);
		
		Результат = СформироватьКомментарииДвери(Выборка.Спецификация);
		Шапка.Параметры.КомментарииДвери = Результат.Комментарий;
