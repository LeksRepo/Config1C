	ИтогСтоимостиМатериаловСоСкидкой 	= 0;
	ИтогСтоимостиУслуг 							= 0;
	ИтогСтоимостиУслугСоСкидкой 			= 0;
	РозничнаяСтоимость 							= 0;
	НомерСтрокиУслуг 								= 0;
	НомерСтрокиМатериалов 					= 0;
	
